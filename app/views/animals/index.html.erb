<h1>Animal List</h1>

<%= form_with model: @animal, url: animals_path, id: 'new_animal', method: :post do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control mb-3 w-25', id: 'js-new-animal-body', row: 4, placeholder: '動物の名前' %>
    <%= f.submit '登録する', class: 'btn btn-primary' %>
  </div>
<% end %>

<div class='table-responsive w-25'>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>name</th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
