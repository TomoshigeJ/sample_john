<h1>Animal List</h1>

<%= link_to 'new_animal', new_animal_path %>

<div class='table-responsive w-25'>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>name</th>
      <th>image</th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.avatar %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
